    main 
      form(action="/add-message", method="POST") 
        div 
          label(for="name") Nama
          input(type="text", id="name", name="name" placeholder="Masukan Nama")
        div 
          label(for="message") Pesan
          input(type="text", id="message", name="message", placeholder="Masukan Pesan")
        button(type="Submit") Submit Pesan


    main
      if messages.length > 0
        each message in messages
          p #{message.name}
          p #{message.date}
          p #{message.message}
      else 
        h1 Tidak Ada Pesan


    